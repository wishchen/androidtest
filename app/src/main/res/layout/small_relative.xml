<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:text="猜拳游戏"/>

    <ImageView
        android:id="@+id/image01"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/rabbit"
        android:layout_below="@id/label"/>
    <ImageView
        android:id="@+id/image02"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/rabbit"
        android:layout_alignBottom="@id/image01"
        android:layout_toRightOf="@id/image01"/>
    <RadioGroup
        android:id="@+id/radioGroup01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image01"
        android:layout_marginLeft="20dp">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="石头"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="剪刀"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="布"/>

    </RadioGroup>
    <RadioGroup
        android:id="@+id/radioGroup02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/radioGroup01"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="80dp">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="剪刀"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="石头"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="布"/>

    </RadioGroup>
    <Button
        android:id="@+id/okBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/radioGroup01"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:text="确定"/>
    <TextView
        android:id="@+id/res01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="结果"
        android:layout_below="@id/okBtn"
        android:layout_alignParentLeft="true"/>
    <TextView
        android:id="@+id/res02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="测试结果"
        android:layout_alignBottom="@id/res01"
        android:layout_alignParentRight="true"/>
</RelativeLayout>
